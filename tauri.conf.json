{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ChronoGhost",
  "version": "0.1.0",
  "identifier": "com.example.chronoghost",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "ChronoGhost",
        "width": 291,
        "height": 315,
        "minWidth": 291,
        "minHeight": 315,
        "maxWidth": 1920,
        "maxHeight": 1200,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "os": {},
